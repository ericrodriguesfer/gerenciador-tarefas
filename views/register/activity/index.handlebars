<div class="container body-activity">
    <div class="row justify-content-md-center">
        <div class="col">
            <center><h2>Cadastrar tarefa</h2></center>
            <hr>    
            <form action="" method="POST">
                <div class="form-group">
                    <label for="title-activity">Título da tarefa:</label>
                    <input type="text" class="form-control" id="title-activity" name="title-activity" placeholder="Digite um título para sua nova tarefa" required>
                </div>
                <div class="form-group">
                    <label for="category-activity">Selecione a categoria da tarefa:</label>
                    <select class="custom-select" id="category-activity" name="category-activity" required>
                        <option value="1">Escola</option>
                        <option value="2">Casa</option>
                        <option value="3">Trabalho</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="content-activity">Digite a ação da tarefa:</label>
                    <textarea class="form-control" id="content-activity" name="content-activity" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-success btn-login">Cadastrar</button>
                <a href="/home" class="btn btn-danger btn-login">Voltar ao home</a>
            </form>
        </div>
    </div>
</div>